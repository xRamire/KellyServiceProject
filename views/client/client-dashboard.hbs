<section class="dashboard">
    <nav class="nav-dashboard">
        <p>{{currentUser.fullName}} Dashboard Client</p>
        <div>
            <span>
                <img src="{{currentUser.image}}" alt="avatar">
            </span>
            <a href="/client/edit">Edit Profile</a>
           <a href="/client/logout"><button class="close-session">log out</button></a>
        </div>
    </nav>
     <h1>Available Workers</h1>
    <div id="map"></div>
    <div class="dashboard-content">
        <div class="create-service">
            <span>Create service</span>
            <form action="/services/new" method="POST">

                <label> 
                    <input name="title" type="text" placeholder="Titulo">
                </label>
                <label> 
                    <input name="description" type="text" placeholder="Description">
                </label>
                <label>
                    <input name="address" type="text" placeholder="Address">
                </label>
                <label>
                    <input name="postcode" type="number" placeholder="Post Code" class="postCode">
                </label>
                <label> 
                    <span>Tipo de servicio:</span>
                    <select name="serviceType">
                        <option value="Limpieza">Cleaning services</option>
                        <option value="Canguro">Babysitting services</option>
                        <option value="Jardineria">Landscaping services</option>
                    </select>
                </label>
                {{!-- <label>
                    <input name="candidates" type="">
                </label> --}}

                {{!-- <label>
                    <input name="client" type="">
                </label> --}}
                <button type="submit" class="btn">Crear servicio</button>

            </form>
        </div>
        <div class="current-active-services">
            <span>Current services</span>
            {{!-- //for each active oferts --}}
            {{#each myServices}}
            <li>
                <a href="/services/details/{{_id}}">
                    <p><strong>Service Type: </strong> {{serviceType}}</p>
                    <p><strong>Address: </strong> {{address}}</p>
                    <p><strong>Client: </strong> {{client.fullName}}</p>
                </a>
                <a href="/services/delete?id={{id}}" class="btn">Cancel</a> 
            </li>
            {{/each}}
        </div>
    </div>


</section>
