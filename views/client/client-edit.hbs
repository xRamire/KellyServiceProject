<div id="form" class="editFormProfiles">
  <div class="cont-profile"> 
    <div class="cont-header-profile">
      <span>Edit Client Profile</span>
      <a href="/client/dashboard" class="btn back"> Back dashboard</a>
    </div>
    <form action="/client/edit?id={{id}}" method="POST" enctype="multipart/form-data">
      <label>
        <p>Fullname: </p>
        <input type="text" name="fullName" value="{{fullName}}" required />
      </label>
      <label>
        <p>Email: </p>
        <input type="email" name="email" value="{{email}}" required/>
      </label>
      <label>
        <p>Password: </p>
        <input type="password" name="password" placeholder="********" required/>
      </label>
      <label>
        <p>Address: </p>
        <input type="text" name="address" value="{{address}}" required/>
      </label>
      <label>
        <p>Post code: </p>
        <input type="number" name="postcode" value="{{postcode}}" required />
      </label>
      <label>
        <p>Profile Image:</p>
        <input type="file" name="image" placeholder="Add image" />
      </label>
      
      <button type="submit" class="btn edit btn-Client-login">Submit</button>
      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</div>